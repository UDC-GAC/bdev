<configuration>
  <property>
    <name>fs.default.name</name>
    <value>hdfs://$master:$fs_port</value>
  </property>
  <property>
    <name>hadoop.tmp.dir</name>
    <value>$tmp_dir/hadoop</value>
  </property>
  <property>
    <name>io.file.buffer.size</name>
    <value>$io_file_buffer_size</value>
  </property>
  <property>
	<name>ipc.client.rpc-timeout.ms</name>
	<value>$ipc_client_rpc_timeout</value>
  </property>
  <property>
	<name>ipc.ping.interval</name>
	<value>$ipc_ping_interval</value>
  </property>
  
<!-- RDMA-Hadoop specific -->
  <property>
    <name>hadoop.ib.enabled</name>
    <value>$rdma_hadoop_ib_enabled</value>
  </property>
  <property>
    <name>hadoop.roce.enabled</name>
    <value>$rdma_hadoop_roce_enabled</value>
  </property>
</configuration>
